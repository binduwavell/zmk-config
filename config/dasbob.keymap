        };

        ess: ess {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_tap>,
                <&kp E>,
                <&macro_release>,
                <&kp LSHIFT &kp RSHIFT>,
                <&macro_tap>,
