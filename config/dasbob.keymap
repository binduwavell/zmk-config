                <&kp U>;

            label = "MACRO_QU";
        };

        wh: wh {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_tap>,
                <&kp W>,
                <&macro_release>,
                <&kp LSHIFT &kp RSHIFT>,
                <&macro_tap>,
                <&kp H>;

